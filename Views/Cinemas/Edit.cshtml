@model Cinema
@{
    ViewData["Title"] = "Edit the cinema";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h2>Edit the cinema</h2>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger">

                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Picture" class="control-label"></label>
                        <input asp-for="Picture" class="form-control" />
                        <span asp-validation-for="Picture" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <a class="btn btn-outline-primary" asp-action="Index">Go back</a>
                        <input type="submit" class="btn btn-outline-success" value="Confirm" />
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</div>